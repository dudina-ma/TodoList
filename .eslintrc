{
	"env": {
		"node": true,
		"browser": true,
		"es2021": true
	},
	"ignorePatterns": ["public/scripts/lib/**/*.js"],
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"prefer-const": "error",
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"keyword-spacing": "error",
		"camelcase": "error",
		"func-call-spacing": [
			"error",
			"never"
		],
		"no-trailing-spaces": "error",
		"no-multiple-empty-lines": "error",
		"no-multi-spaces": "error",
		"brace-style": [
			"error",
			"1tbs"
		],
		"eqeqeq": [
			"error",
			"always",
			{ "null": "ignore" }
		],
		"no-var": "error"
	}
}
