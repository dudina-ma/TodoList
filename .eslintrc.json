{
	"env": {
		"node": true,
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"linebreak-style": [
			"error",
			"windows"
		],
		"quotes": [
			"error",
			"single"
		],
		"semi": [
			"error",
			"always"
		],
		"keyword-spacing": "error",
		"func-call-spacing": [
			"error",
			"never"
		],
		"no-trailing-spaces": "error",
		"no-multiple-empty-lines": "error",
		"brace-style": [
			"error",
			"1tbs"
		]
	}
}
